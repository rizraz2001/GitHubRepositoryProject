


<div ng-controller="SearchToolController as ctr">
    <div class="row">
        @* Search Tool *@
        <div class="col-lg-6">
            <h2>Github Search Tool <label ng-bind="'(Results : ' + (!ctr.gitHubRepositories.length ? 0 : ctr.gitHubRepositories.length) + ')'"></label></h2>
            <form class="form-inline">
                <div class="form-group mb-3">
                    <label for="inputPassword2" class="sr-only">Search</label>
                    <input type="text" class="form-control" placeholder="Search for repository" ng-model="ctr.searchText">
                </div>
                <button type="submit" class="btn btn-primary mb-2" ng-click="ctr.SearchForGitRepository(ctr.searchText)">Search</button>
            </form>
        </div>
        @* Notifications *@
        <div class="col-lg-6">
            <div id="notifications" style="max-height:100px;overflow-y:scroll"></div>
        </div>
    </div>


    @* Github repositories *@
    <div class="loader" ng-show="!ctr.isLoaded"></div>
    <div ng-show="ctr.isLoaded">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" data-ng-repeat="c in ctr.repositoryItems">
                <div class="card align-items-center d-flex justify-content-center btn shadow btn-outline-dark">
                    <div class="row">
                        <h5 data-ng-bind="c.name"></h5>

                    </div>
                    <div class="card-body">
                        <div class="row">
                            <img style="height: 180px" class="card-img-top col-xs-12 col-lg-12" ng-src="{{c.owner.avatar_url}}" alt="Card image cap">
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-lg-12 col-md-12">
                                <button class="btn btn-sm btn-primary col-xs-12 col-lg-12 col-md-12" ng-click="ctr.SaveReposotory(c)">
                                    Bookmark
                                    <span class="glyphicon glyphicon-bookmark"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Directive for paging component *@
        <git-paging-directive></git-paging-directive>

    </div>

</div>




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 shrink-to-fit=no">
    <title>GitHub Search Tool</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("GitHub Search Tool", "Index", "GitHubSearch", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-link">
                @Html.ActionLink("Bookmarks", "Bookmark", "GitHubSearch", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>



    @RenderSection("scripts", required: false)

    <div class="container body-content" ng-app="GithubSearchTool">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")

</body>
</html>
